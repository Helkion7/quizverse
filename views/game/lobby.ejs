<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | QuizVerse</title>
  <link rel="stylesheet" href="/css/main.css">
  <style>
    :root {
      --color-background: oklch(0.05 0.01 250);
      --color-text-primary: oklch(0.9 0.02 250);
      --color-text-secondary: oklch(0.6 0.01 250);
      --color-accent: oklch(0.7 0.05 280);
      --color-border: oklch(0.2 0.01 250);
      --transition-fast: 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    body {
      background-color: var(--color-background);
      color: var(--color-text-primary);
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      width: 100%;
      max-width: 600px;
      margin: 0 auto;
      padding: 16px;
    }

    .game-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 24px;
    }

    .game-code {
      padding: 12px 16px;
      background-color: rgba(255, 255, 255, 0.05);
      border: 1px solid var(--color-border);
      border-radius: 4px;
      font-family: monospace;
      font-size: 1.5rem;
      letter-spacing: 4px;
      text-align: center;
      cursor: pointer;
    }

    .game-code:hover {
      background-color: rgba(255, 255, 255, 0.07);
    }

    h1 {
      font-size: 1.25rem;
      font-weight: 200;
      color: var(--color-text-primary);
      letter-spacing: -0.025em;
      margin: 0 0 8px 0;
    }

    p {
      font-size: 0.875rem;
      color: var(--color-text-secondary);
      margin: 0 0 16px 0;
    }

    .player-list {
      margin: 0;
      padding: 0;
      list-style: none;
    }

    .player-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      height: 48px;
      padding: 0 8px;
      border-bottom: 1px solid var(--color-border);
      transition: background-color var(--transition-fast);
    }

    .player-item:hover {
      background-color: rgba(255, 255, 255, 0.03);
    }

    .player-number {
      color: var(--color-text-secondary);
      font-size: 0.75rem;
      width: 24px;
    }

    .player-name {
      flex-grow: 1;
    }

    .action-buttons {
      display: flex;
      justify-content: flex-end;
      margin-top: 24px;
      gap: 12px;
    }

    button {
      background: transparent;
      border: 1px solid var(--color-border);
      color: var(--color-text-secondary);
      font-size: 0.875rem;
      cursor: pointer;
      padding: 8px 16px;
      transition: all var(--transition-fast);
    }

    button:hover {
      color: var(--color-accent);
      border-color: var(--color-accent);
    }

    button.primary {
      background-color: var(--color-accent);
      color: var(--color-background);
    }

    button.primary:hover {
      background-color: oklch(0.75 0.06 280);
      color: var(--color-background);
    }

    .fade-in {
      animation: fadeIn var(--transition-fast);
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .empty-state {
      text-align: center;
      padding: 24px 0;
      color: var(--color-text-secondary);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="game-header">
      <div>
        <h1><%= gameSession.quiz.title %></h1>
        <p>Waiting for players to join...</p>
      </div>
      <div class="game-code" onclick="copyGameCode()" title="Click to copy">
        <%= gameSession.code %>
      </div>
    </div>

    <div class="player-list-container">
      <h2>Players (<span id="player-count"><%= gameSession.players.length %></span>)</h2>
      
      <% if (gameSession.players.length === 0) { %>
        <div class="empty-state">
          <p>No players have joined yet.</p>
        </div>
      <% } else { %>
        <ul class="player-list" id="player-list">
          <% gameSession.players.forEach((player, index) => { %>
            <li class="player-item fade-in">
              <span class="player-number"><%= index + 1 %></span>
              <span class="player-name"><%= player.nickname %></span>
            </li>
          <% }); %>
        </ul>
      <% } %>
    </div>

    <div class="action-buttons">
      <% if (isHost) { %>
        <button id="start-game" class="primary" <%= gameSession.players.length === 0 ? 'disabled' : '' %>>
          Start Quiz
        </button>
      <% } else { %>
        <button id="leave-game">Leave Lobby</button>
      <% } %>
    </div>
  </div>

  <script>
    // Function to copy game code to clipboard
    function copyGameCode() {
      const gameCode = '<%= gameSession.code %>';
      navigator.clipboard.writeText(gameCode)
        .then(() => {
          alert('Game code copied to clipboard!');
        })
        .catch(err => {
          console.error('Failed to copy game code: ', err);
        });
    }

    // WebSocket connection for real-time updates would go here
    // For the mockup, we're just showing the static view

    // Start game button handler
    document.getElementById('start-game')?.addEventListener('click', function() {
      // This would send a request to start the game
      alert('Starting quiz! (Implementation pending)');
    });

    // Leave game button handler
    document.getElementById('leave-game')?.addEventListener('click', function() {
      // This would send a request to leave the game
      window.location.href = '/';
    });
  </script>
</body>
</html>
